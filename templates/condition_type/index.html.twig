{% extends 'backoffice_base.html.twig' %}

{% block title %}Codes | Index{% endblock %}

{% block body %}
    <div class="page" data-current="conditions"></div>
    <div class="d-flex justify-content-between mb-5">
        <h1>Conditions d'admission</h1>
        <a href="{{ path('app_condition_type_new') }}"><img src="{{asset('build/img/plus-icon.svg')}}" alt="icon plus" title="Ajouter une condition d'admission"></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for condition in conditions %}
            <tr>
                <td>{{ condition.descriptive }}</td>
                <td>
                    <div class="d-flex justify-content-around">
                        <a href="{{ path('app_condition_type_show', {'id': condition.id}) }}"><img src="{{asset('build/img/show-icon.svg')}}" class="me-2" alt="icon show" title="Voir l'entité"></a>
                        <a href="{{ path('app_condition_type_edit', {'id': condition.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" alt="icon edit" title="Modifier l'entité"></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}
{% endblock %}
