{% extends 'base.html.twig' %}

{% block title %}Cost index{% endblock %}

{% block body %}
    <h1>Cost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descriptive</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cost in costs %}
            <tr>
                <td>{{ cost.id }}</td>
                <td>{{ cost.descriptive }}</td>
                <td>
                    <a href="{{ path('app_cost_type_show', {'id': cost.id}) }}">show</a>
                    <a href="{{ path('app_cost_type_edit', {'id': cost.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cost_type_new') }}">Create new</a>
{% endblock %}
