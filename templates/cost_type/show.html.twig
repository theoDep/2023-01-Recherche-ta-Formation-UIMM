{% extends 'backoffice_base.html.twig' %}

{% block title %}Cost{% endblock %}

{% block body %}
    <div class="page" data-current="frais"></div>
    <div class="d-flex justify-content-between mb-5 col-lg-10">
        <div class="d-flex">
            <h1>Frais de scolarité</h1>
            {{ include('cost_type/_delete_form.html.twig') }}
        </div>
        <div class="d-flex">
            <a class="mt-3" href="{{ path('app_cost_type_edit', {'id': cost.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" alt="icon edit" title="Modifier l'entité"></a>
            <a class="mt-3 ms-3" href="{{ path('app_cost_type_index') }}"><img src="{{asset('build/img/back-icon.svg')}}" alt="icon back" title="Retour en arrière"></a>
        </div>
    </div>

<div class="col-lg-10">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cost.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cost.descriptive }}</td>
            </tr>
            <tr>
                <th>Formations liées</th>
                <td>
                    {% for formation in cost.formations %}
                        {{formation}}<br/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
</div>


    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}
{% endblock %}
