{% extends 'backoffice_base.html.twig' %}

{% block title %}Métier | Aperçu{% endblock %}

{% block body %}
    <div class="page" data-current="metiers"></div>
    <div class="d-flex justify-content-between mb-5 col-lg-10">
        <div class="d-flex">
            <h1>Métier</h1>
            {{ include('job_type/_delete_form.html.twig') }}
        </div>
        <div class="d-flex">
            <a class="mt-3" href="{{ path('app_job_type_edit', {'id': job.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" alt="icon edit" title="Modifier l'entité"></a>
            <a class="mt-3 ms-3" href="{{ path('app_job_type_index') }}"><img src="{{asset('build/img/back-icon.svg')}}" alt="icon back" title="Retour en arrière"></a>
        </div>
    </div>

<div class="col-lg-10">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ job.name }}</td>
            </tr>
            <tr>
                <th>Formations liées</th>
                <td>
                    {% for formation in job.formations %}
                        {{formation}}<br/>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
</div>

    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}
{% endblock %}
