{% extends 'backoffice_base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <div class="page" data-current="formations"></div>
    <div class="d-flex justify-content-between mb-5 col-lg-10">
        <div class="d-flex">
            <h1>Formation</h1>
            {{ include('formation_type/_delete_form.html.twig') }}
        </div>
        <div class="d-flex mt-3">
            <a href="{{ path('app_formation_type_edit', {'id': formation.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" alt="icon edit" title="Modifier l'entité"></a>
            <a class="mx-3" href="{{ path('app_training_details', {'id': formation.id}) }}"><img src="{{asset('build/img/preview-icon.svg')}}" class="mt-1" alt="icon edit" title="Aperçu de l'entité"></a>
            <a href="{{ path('app_formation_type_index') }}"><img src="{{asset('build/img/back-icon.svg')}}" alt="icon back" title="Retour en arrière"></a>
        </div>
    </div>

    <div class="col-lg-10">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ formation.id }}</td>
                </tr>
                <tr>
                    <th>État</th>
                    <td>
                        {% if formation.state %}
                            En ligne
                        {% else %}
                            Hors ligne
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ formation.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ formation.descriptive }}</td>
                </tr>
                <tr>
                    <th>Niveau d'étude</th>
                    <td>{{ formation.studiesLevel }}</td>
                </tr>
                <tr>
                    <th>Durée</th>
                    <td>{{ formation.duration }} heures</td>
                </tr>
                <tr>
                    <th>Codes</th>
                    <td>
                        {% for code in formation.codes %}
                            {{code}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Métiers visés</th>
                    <td>
                        {% for job in formation.jobs %}
                            {{job}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Conditions d'admission</th>
                    <td>
                        {% for condition in formation.conditions %}
                            {{condition}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Frais de scolarité</th>
                    <td>
                        {% for cost in formation.costs %}
                            {{cost}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Lieux</th>
                    <td>
                        {% for location in formation.locations %}
                            {{location}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Format</th>
                    <td>
                        {% for format in formation.formats %}
                            {{format}}<br/>
                        {% endfor %}
                    </td>
                </tr>
                <tr>
                    <th>Suites possibles</th>
                    <td>
                        {% for sequel in formation.sequels %}
                            {{sequel}}<br/>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}
{% endblock %}
