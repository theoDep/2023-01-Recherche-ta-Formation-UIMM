{% extends 'backoffice_base.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block body %}
    <div class="page" data-current="formations"></div>
    <div class="d-flex justify-content-between mb-5">
        <h1>Formations</h1>
        <a href="{{ path('app_formation_type_new') }}"><img src="{{asset('build/img/plus-icon.svg')}}" alt="icon plus" title="Ajouter une formation"></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.name }}</td>
                <td>
                    <div class="d-flex justify-content-around">
                        <a href="{{ path('app_formation_type_show', {'id': formation.id}) }}"><img src="{{asset('build/img/show-icon.svg')}}" alt="icon show" title="Voir l'entité"></a>
                        <a href="{{ path('app_formation_type_edit', {'id': formation.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" class="mx-2" alt="icon edit" title="Modifier l'entité"></a>
                        <a href="{{ path('app_training_details', {'id': formation.id}) }}"><img src="{{asset('build/img/preview-icon.svg')}}" class="mt-1" alt="icon edit" title="Aperçu de l'entité"></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}

{% endblock %}
