{% extends 'backoffice_base.html.twig' %}

{% block title %}Compétence | Aperçu{% endblock %}

{% block body %}
    <div class="page" data-current="competences"></div>
    <div class="d-flex justify-content-between mb-5 col-lg-10">
        <div class="d-flex">
            <h1>Compétence</h1>
            {{ include('skill_type/_delete_form.html.twig') }}
        </div>
        <div class="d-flex">
            <a class="mt-3" href="{{ path('app_skill_type_edit', {'id': skill.id}) }}"><img src="{{asset('build/img/edit-icon.svg')}}" alt="icon edit" title="Modifier l'entité"></a>
            <a class="mt-3 ms-3" href="{{ path('app_skill_type_index') }}"><img src="{{asset('build/img/back-icon.svg')}}" alt="icon back" title="Retour en arrière"></a>
        </div>
    </div>

    <div class="col-lg-10">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ skill.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ skill.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ skill.descriptive }}</td>
                </tr>
                <tr>
                    <th>Codes liés</th>
                    <td>
                        {% for formation in skill.codes %}
                            {{formation}}<br/>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('backoffice') }}
        {{parent()}}
    {% endblock %}
{% endblock %}
